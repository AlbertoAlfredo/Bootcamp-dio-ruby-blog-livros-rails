<p style="color: green">
  <%= notice %>
</p>
<div class="container">
  <%= render @livro %>

    <div>
      <div class="row gy-3">
        <div class="col-md-2">
          <%= link_to "Editar este livro" , edit_livro_path(@livro), class: "btn btn-primary" %>
        </div>
        <div class="col-md-2">
          <%= link_to "Voltar para livros" , livros_path, class: "btn btn-primary" %>
        </div>
        <div class="col-md-2">
          <%= button_to "Destruir este livro" , @livro, method: :delete, class: "btn btn-danger" %>
        </div>
      </div>

    </div>
</div>